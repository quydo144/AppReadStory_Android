<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_person_icon"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/large_space"
        android:adjustViewBounds="true"
        android:scaleType="center" />

    <TextView
        android:id="@+id/textview_person_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_toEndOf="@id/imageview_person_icon"
        android:textColor="@color/mainText"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/textview_person_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_person_title"
        android:layout_alignStart="@+id/textview_person_title"
        android:layout_alignEnd="@+id/textview_person_title"
        android:textColor="@color/threeText"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>