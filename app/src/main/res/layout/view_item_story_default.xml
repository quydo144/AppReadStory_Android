<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/medium_space"
    android:paddingTop="@dimen/small_space"
    android:paddingEnd="@dimen/medium_space"
    android:paddingBottom="@dimen/small_space">

    <ImageView
        android:id="@+id/imageview_story_default_cover"
        android:layout_width="77.0dip"
        android:layout_height="77.0dip"
        android:adjustViewBounds="true"
        android:background="@drawable/story_default_cover_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textview_story_default_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/secondText"
        android:textSize="@dimen/small_text_size" />
</LinearLayout>