<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_space">

    <ImageView
        android:id="@+id/imageview_community_readlists_cover"
        android:layout_width="@dimen/medium_image_width"
        android:layout_height="@dimen/medium_image_height"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:background="@drawable/story_thumb_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textview_community_readlists_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_space"
        android:layout_toEndOf="@+id/imageview_community_readlists_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/secondText"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/textview_community_readlists_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_community_readlists_title"
        android:layout_alignStart="@id/textview_community_readlists_title"
        android:maxLines="1"
        android:textColor="@color/threeText"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>