<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_story"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_story_thumb"
        android:layout_width="@dimen/story_thumb_width"
        android:layout_height="@dimen/story_thumb_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space"
        android:background="@drawable/story_thumb_bg"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/imageview_story_full"
        android:layout_width="17.0dip"
        android:layout_height="25.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:src="@drawable/full" />

    <TextView
        android:id="@+id/textview_story_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/medium_space"
        android:layout_marginRight="@dimen/medium_space"
        android:layout_toRightOf="@+id/imageview_story_thumb"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/mainText"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/textview_story_chapter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_story_name"
        android:layout_alignLeft="@+id/textview_story_name"
        android:layout_alignRight="@+id/textview_story_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/secondText"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/textview_story_genre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_story_chapter"
        android:layout_alignLeft="@+id/textview_story_name"
        android:layout_alignRight="@+id/textview_story_name"
        android:layout_marginBottom="@dimen/large_space"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/secondText"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>