<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_person_account_avatar"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/large_space"
        android:adjustViewBounds="true"
        android:background="@drawable/account_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textview_person_account_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:layout_marginEnd="@dimen/medium_space"
        android:layout_toStartOf="@+id/imageView_right"
        android:layout_toEndOf="@+id/imageview_person_account_avatar"
        android:textColor="@color/mainText"
        android:textSize="@dimen/medium_text_size" />

    <TextView
        android:id="@+id/textview_person_account_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_person_account_title"
        android:layout_alignStart="@id/textview_person_account_title"
        android:layout_alignEnd="@id/textview_person_account_title"
        android:textColor="@color/threeText"
        android:textSize="@dimen/medium_text_size" />

    <ImageView
        android:id="@id/imageView_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:tint="@color/colorPrimary" />
</RelativeLayout>